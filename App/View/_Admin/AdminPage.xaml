<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ISSProject"
             x:Class="ISSProject.AdminPage">
    <StackLayout>
        <!-- List of Users -->
        <ListView x:Name="usersListView" ItemSelected="UsersListView_ItemSelected">
            <!-- Define your user data template here -->
        </ListView>

        <!-- Ban and Warn Button -->
        <StackLayout Orientation="Horizontal">
            <Button Text="Ban" Clicked="BanButton_Clicked" />
            <Button Text="Warn" Clicked="WarnButton_Clicked" />
        </StackLayout>

        <!-- Admin Log -->
        <ListView x:Name="adminLogListView">
            <!-- Define your admin log data template here -->
        </ListView>

        <!-- List of Claims -->
        <ListView x:Name="claimsListView" ItemSelected="ClaimsListView_ItemSelected">
            <!-- Define your claims data template here -->
        </ListView>

        <!-- Resolve Claim Section -->
        <StackLayout x:Name="resolveClaimSection" IsVisible="False">
            <Button Text="Resolve Claim" Clicked="ResolveClaimButton_Clicked" />
            <Entry x:Name="resolveEntry" Placeholder="Enter decision" />
        </StackLayout>
    </StackLayout>
</ContentPage>
