<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ISSProject"
             x:Class="ISSProject.SongDetailsPage"
             x:DataType="local:SongDetailsPage">

    <ContentPage.Content>
        <StackLayout>
            <!-- Label to display the selected song -->
            <Label Text="{Binding SelectedSong}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />

            <!-- Button to navigate back -->
            <Button Text="Back" Clicked="BackButton_Clicked" HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
